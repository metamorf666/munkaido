{% extends "layout" %}

{% block content %}
<h2>Log</h2>

{% if old('errors') %}
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibák</h3>
  </div>
  <div class="panel-body">
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}


<form class="form-horizontal" method="post">

  {{ csrfField }}

  <div class="form-group">
    <label for="name" class="col-lg-2 control-label">Időtartam</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="hours" name="hours" placeholder="Órák" value="{{old('hours')}}">
    </div>
  </div>
  <div class="form-group">
    <label for="instructions" class="col-lg-2 control-label">Leírás</label>
    <div class="col-lg-10">
      <textarea class="form-control" rows="3" id="description" name="description">{{old('description')}}</textarea>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="reset" class="btn btn-default">Mégsem</button>
      <button type="submit" class="btn btn-primary">Küldés</button>
    </div>
  </div>
</form>

{% endblock %}